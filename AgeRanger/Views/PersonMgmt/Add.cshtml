<form id="addPersonForm" class="form-horizontal" ng-submit="addPerson()">
    <div class="form-group">
        <label class="control-label col-sm-2">First Name</label>
        <input type="text" class="form-control col-sm-10" ng-model="addPersonForm.FirstName" required/>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Last Name</label> 
        <input type="text" class="form-control col-sm-10" ng-model="addPersonForm.LastName" required/>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Age</label> 
        <input type="number" class="form-control col-sm-10" ng-model="addPersonForm.Age" required/>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
    <div ng-if="addPersonForm.addPersonFailure">
        <label>An error occured while adding user</label>
    </div>
</form>
