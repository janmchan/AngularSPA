<form id="updatePersonForm" class="form-horizontal" ng-submit="updatePerson()">
    <input type="hidden" ng-model="personForm.Id"/>
    <div class="form-group">
        <label class="control-label col-sm-2">First Name</label>
        <input type="text" class="form-control col-sm-10" ng-model="personForm.FirstName" required/>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Last Name</label>
        <input type="text" class="form-control col-sm-10" ng-model="personForm.LastName" required/>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Age</label>
        <input type="number" class="form-control col-sm-10" ng-model="personForm.Age" required/>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
           
        </div>
        <div  class="col-sm-offset-2 col-sm-10">
            <p ng-if="personForm.processPersonFailure">An error occured while updating user</p>
        </div>
    </div>
    
</form>
